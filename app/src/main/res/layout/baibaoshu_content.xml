<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:weightSum="1">
<RelativeLayout
    android:layout_margin="5dp"
    android:layout_weight="0.5"
    android:alpha="0.9"
    android:id="@+id/huayu_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/huayu_content_style"
    android:orientation="vertical">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/baibaoshu_content_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:src="@mipmap/app"/>
    <TextView
        android:id="@+id/baibaoshu_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_below="@+id/baibaoshu_content_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

</RelativeLayout>
</LinearLayout>