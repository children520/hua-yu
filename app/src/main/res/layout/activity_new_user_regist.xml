<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/regist_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@android:color/white">

        <Button
            android:id="@+id/regist_btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/regist_edit_pwd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_shape"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20dp"/>


        <ImageView
            android:id="@+id/regist_xu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@mipmap/login_xu"/>

        <ImageView
            android:id="@+id/regist"
            android:layout_width="250dp"
            android:layout_height="216dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="108dp"
            android:src="@mipmap/login"/>

        <EditText
            android:id="@+id/regist_edit_pwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:ems="15"
            android:hint="请设置密码"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/regist_edit_two_pwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_edit_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:ems="15"
            android:hint="请再次输入密码"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/regist_username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:hint="请设置用户名"
            android:inputType="textPersonName"
            android:theme="@style/AppTheme"/>


        <TextView
            android:id="@+id/unable_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="无法注册？"
            android:onClick="UnableRegist"
            android:clickable="true"
            android:textSize="18dp"/>

    </RelativeLayout>


</RelativeLayout>
