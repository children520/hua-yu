<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/content_style"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_below="@id/plant_chinese_name"
        android:layout_gravity="center_vertical"
        android:id="@+id/plant_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学名"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/plant_chinese_name"/>
        <TextView
            android:layout_toRightOf="@id/plant_chinese_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="拉丁名字"
            android:id="@+id/plant_latin_name"/>
        <TextView
            android:layout_below="@id/plant_latin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="科属"
            android:id="@+id/plant_family_genus"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/delete_plant"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/huanyuan_delete_plant_icon_selector"
            android:layout_alignParentRight="true"
            android:layout_below="@id/plant_latin_name"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_below="@id/delete_plant"
            android:id="@+id/plant_soil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="泥炭土、叶糠和珍珠岩按3：2：1的比例配成混合土使用。"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>

</LinearLayout>