<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plant_detail"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/plant_detail_information"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/baibaoshu_border"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/plant_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plant_detail_chinese_name"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@mipmap/apple" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学名"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:id="@+id/plant_detail_chinese_name"/>
            <TextView
                android:layout_toRightOf="@id/plant_detail_chinese_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="拉丁名字"
                android:id="@+id/plant_detail_latin_name"/>
            <TextView
                android:layout_below="@id/plant_detail_latin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="科属"
                android:id="@+id/plant_detail_family_genus"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_below="@id/plant_detail_family_genus"
                android:id="@+id/plant_detail_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="泥炭土、叶糠和珍珠岩按3：2：1的比例配成混合土使用。"
                android:layout_gravity="center_horizontal"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/huahu_first_button"
        android:layout_below="@+id/plant_detail_information">

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/birthday"/>
            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:text="我的生日:"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/plant_detail_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:text="2016060209"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/drink_water"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="饮水时间:"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/plant_detail_drink_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:text="8天后"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/fertilization"/>
            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:text="施肥时间:"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/plant_detail_fertilization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:text="8天后"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/scissors"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="修剪时间:"
                android:layout_gravity="bottom"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/plant_detail_scissors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="8天后"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/change_soil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="换土时间:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plant_detail_change_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:padding="8dp"
                android:text="8天后"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/breed"/>
            <TextView
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:text="繁殖时间:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/plant_detail_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="8天后"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/remind_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/baibaoshu_border">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/clock"/>
            <TextView
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:text="提醒设置"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@mipmap/arrow_gray"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>