<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plant_detail"
    android:background="@mipmap/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/plant_detail_information"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/content_style"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/plant_detail_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/plant_detail_chinese_name"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学名"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:id="@+id/plant_detail_chinese_name"/>
            <TextView
                android:layout_toRightOf="@id/plant_detail_chinese_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="拉丁名字"
                android:id="@+id/plant_detail_latin_name"/>
            <TextView
                android:layout_below="@id/plant_detail_latin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="科属"
                android:id="@+id/plant_detail_family_genus"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_below="@id/plant_detail_family_genus"
                android:id="@+id/plant_detail_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="泥炭土、叶糠和珍珠岩按3：2：1的比例配成混合土使用。"
                android:layout_gravity="center_horizontal"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/huahu_first_button"
        android:layout_below="@+id/plant_detail_information">

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">
            <ImageView
                android:id="@+id/birthday_image"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"

                android:src="@mipmap/birthday"/>
            <TextView
                android:id="@+id/birthday_text"
                android:layout_toRightOf="@id/birthday_image"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:text="我的生日:"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/birthday_text"
                android:id="@+id/plant_detail_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="2016060209"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/drink_image"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/drink_water"/>

            <TextView
                android:id="@+id/drink_text"
                android:layout_toRightOf="@+id/drink_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="饮水时间:"
                android:textSize="16dp" />
            <TextView
                android:layout_toRightOf="@id/drink_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/plant_detail_drink_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:text="8天后"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:id="@+id/fertilization_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/fertilization"/>
            <TextView
                android:id="@+id/fertilization_text"
                android:layout_toRightOf="@+id/fertilization_image"
                android:layout_width="wrap_content"
                android:text="施肥时间:"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toRightOf="@+id/fertilization_text"
                android:id="@+id/plant_detail_fertilization"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="8天后"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:id="@+id/scissor_image"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/scissors"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/scissor_text"
                android:layout_toRightOf="@+id/scissor_image"
                android:layout_width="wrap_content"
                android:text="修剪时间:"
                android:textSize="16dp"

                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/scissor_text"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:id="@+id/plant_detail_scissors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="8天后"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:id="@+id/change_soil_image"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/change_soil"/>

            <TextView
                android:id="@+id/change_soil_text"
                android:layout_toRightOf="@id/change_soil_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="换土时间:"
                android:textSize="16dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_toRightOf="@+id/change_soil_text"
                android:id="@+id/plant_detail_change_soil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="8天后"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:id="@+id/breed_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/breed"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/breed_text"
                android:layout_toRightOf="@+id/breed_image"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:text="繁殖时间:"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/breed_text"
                android:layout_marginLeft="5dp"
                android:id="@+id/plant_detail_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="8天后"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/remind_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_style">

            <ImageView
                android:id="@+id/clock_image"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/clock" />
            <TextView
                android:id="@+id/clock_text"
                android:layout_toRightOf="@+id/clock_image"
                android:layout_width="wrap_content"
                android:text="提醒设置"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
            <ImageView

                android:layout_toRightOf="@id/clock_text"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@mipmap/arrow_gray"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>